@page "{id:int}"
@model OdeToFood.Pages.Restaurants.DetailsModel
@{
}
<h1>Details Page</h1>
<h3>@Model.Restaurant.Name</h3>

@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}

<div>Id : @Model.Restaurant.Id</div>
<div>Location :  @Model.Restaurant.Location</div>
<div>Cuisine :  @Model.Restaurant.Cuisine</div>



<a asp-page="./List" class="btn-primary btn">View all Restaurant</a>